struct Shape {
}

impl Shape {
  fn name(self: Self) -> string {
      "Shape"
  }
  fn rename(self: Self, suffix: string) -> string {
      string_add(self.name(), suffix)
  }
  fn join(self: Self, left: string, right: string) -> string {
      string_add(left, string_add(self.name(), right))
  }
}

fn announce(shape: Shape) -> unit {
    let base = shape.name() in
    let with_suffix = shape.rename("!") in
    let combined = shape.join(base, with_suffix) in
    let _ = string_println(combined) in
    ()
}

fn main() -> unit {
    let shape = Shape {} in
    let _ = announce(shape) in
    ()
}

