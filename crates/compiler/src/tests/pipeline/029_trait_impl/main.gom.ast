struct Point {
    x: int32,
    y: int32,
}

enum Maybe[T] {
    Just(T),
    Nothing
}

trait Display {
  fn show(Self) -> string;
}

impl Display for Point {
  fn show(self: Point) -> string {
      "Point"
  }
}

impl Display for Maybe[int32] {
  fn show(self: Maybe[int32]) -> string {
      match self {
          Just(value) => "Just(" + int32_to_string(value) + ")",
          Nothing => "Nothing",
      }
  }
}

fn make_maybe(flag: bool) -> Maybe[int32] {
    if flag {
        Just(42)
    } else {
        Nothing
    }
}

fn main() {
    let point = Point {
        x: 1,
        y: 2
    } in
    let some_number = make_maybe(true) in
    let none_number = make_maybe(false) in
    let _ = string_println(Display::show(point)) in
    let _ = string_println(Display::show(some_number)) in
    let _ = string_println(Display::show(none_number)) in
    ()
}

