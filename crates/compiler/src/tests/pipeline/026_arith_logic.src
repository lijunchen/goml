fn show_int(label: string, value: int) {
    let _ = string_println(string_add(label, int_to_string(value))) in
    ()
}

fn show_bool(label: string, value: bool) {
    let _ = string_println(string_add(label, bool_to_string(value))) in
    ()
}

fn main() {
    let base = 10 in
    let sum = base + 5 in
    let diff = sum - 3 in
    let prod = diff * 2 in
    let quot = prod / 4 in

    let _ = show_int("sum=", sum) in
    let _ = show_int("diff=", diff) in
    let _ = show_int("prod=", prod) in
    let _ = show_int("quot=", quot) in

    let and_result = true && false in
    let or_result = true || false in
    let not_result = !false in
    let mixed = !and_result
        && match sum + prod * base - prod / 2 {
            0 => false,
            _ => true,
        }
        || !match diff - quot + base - sum / 2 {
            0 => false,
            _ => true,
        } in

    let _ = show_bool("and=", and_result) in
    let _ = show_bool("or=", or_result) in
    let _ = show_bool("not=", not_result) in
    let _ = show_bool("mixed=", mixed) in

    ()
}
