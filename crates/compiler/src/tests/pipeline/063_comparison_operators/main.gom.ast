fn test_int_comparisons() {
    let a: int32 = 10 in
    let b: int32 = 20 in
    let c: int32 = 10 in
    let less = a < b in
    let _ = string_println("10 < 20: " + bool_to_string(less)) in
    let greater = b > a in
    let _ = string_println("20 > 10: " + bool_to_string(greater)) in
    let less_eq1 = a <= b in
    let _ = string_println("10 <= 20: " + bool_to_string(less_eq1)) in
    let less_eq2 = a <= c in
    let _ = string_println("10 <= 10: " + bool_to_string(less_eq2)) in
    let greater_eq1 = b >= a in
    let _ = string_println("20 >= 10: " + bool_to_string(greater_eq1)) in
    let greater_eq2 = c >= a in
    let _ = string_println("10 >= 10: " + bool_to_string(greater_eq2)) in
    let eq1 = a == c in
    let _ = string_println("10 == 10: " + bool_to_string(eq1)) in
    let eq2 = a == b in
    let _ = string_println("10 == 20: " + bool_to_string(eq2)) in
    let neq1 = a != b in
    let _ = string_println("10 != 20: " + bool_to_string(neq1)) in
    let neq2 = a != c in
    let _ = string_println("10 != 10: " + bool_to_string(neq2)) in
    ()
}

fn test_float_comparisons() {
    let x: float64 = 3.14 in
    let y: float64 = 2.71 in
    let z: float64 = 3.14 in
    let less = y < x in
    let _ = string_println("2.71 < 3.14: " + bool_to_string(less)) in
    let greater = x > y in
    let _ = string_println("3.14 > 2.71: " + bool_to_string(greater)) in
    let less_eq1 = y <= x in
    let _ = string_println("2.71 <= 3.14: " + bool_to_string(less_eq1)) in
    let less_eq2 = x <= z in
    let _ = string_println("3.14 <= 3.14: " + bool_to_string(less_eq2)) in
    let greater_eq1 = x >= y in
    let _ = string_println("3.14 >= 2.71: " + bool_to_string(greater_eq1)) in
    let greater_eq2 = z >= x in
    let _ = string_println("3.14 >= 3.14: " + bool_to_string(greater_eq2)) in
    let eq1 = x == z in
    let _ = string_println("3.14 == 3.14: " + bool_to_string(eq1)) in
    let eq2 = x == y in
    let _ = string_println("3.14 == 2.71: " + bool_to_string(eq2)) in
    let neq1 = x != y in
    let _ = string_println("3.14 != 2.71: " + bool_to_string(neq1)) in
    let neq2 = x != z in
    let _ = string_println("3.14 != 3.14: " + bool_to_string(neq2)) in
    ()
}

fn main() {
    let _ = string_println("=== Integer Comparisons ===") in
    let _ = test_int_comparisons() in
    let _ = string_println("") in
    let _ = string_println("=== Float Comparisons ===") in
    let _ = test_float_comparisons() in
    ()
}

