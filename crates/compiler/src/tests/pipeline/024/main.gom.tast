fn point32_to_string(p/0: Point) -> string {
  let Point { x: x/1: int32, y: y/2: int32 } = (p/0 : Point) in
  "Point { x: " + (int32_to_string : (int32) -> string)((x/1 : int32)) + ", y: " + (int32_to_string : (int32) -> string)((y/2 : int32)) + " }"
}

fn color_to_string(c/3: Color) -> string {
  match (c/3 : Color) {
      Color::Red => "Red",
      Color::Green => "Green",
      Color::Blue => "Blue",
  }
}

fn line_to_string(l/4: Line) -> string {
  let Line { from: from/5: Point, to: to/6: Point, color: color/7: Color } = (l/4 : Line) in
  "Line { from: " + (point32_to_string : (Point) -> string)((from/5 : Point)) + ", to: " + (point32_to_string : (Point) -> string)((to/6 : Point)) + ", color: " + (color_to_string : (Color) -> string)((color/7 : Color)) + " }"
}

fn point_type(p/8: Point) -> string {
  match (p/8 : Point) {
      Point { x: 0, y: 0 } => "origin",
      Point { x: 0, y: 1 } => "up",
      Point { x: 1, y: 0 } => "right",
      Point { x: 0, y: y/9: int32 } => match 0 < (y/9 : int32) {
            true => "above",
            false => "below",
        },
      _ : Point => "unknown",
  }
}

fn main() -> unit {
  let p0/10: Point = Point { x: 0, y: 0 } in
  let _ : unit = (string_println : (string) -> unit)((point_type : (Point) -> string)((p0/10 : Point))) in
  let p1/11: Point = Point { x: 10, y: 10 } in
  let line/12: Line = Line { from: (p0/10 : Point), to: (p1/11 : Point), color: Color::Red } in
  (string_println : (string) -> unit)((line_to_string : (Line) -> string)((line/12 : Line)))
}