fn main() {
    let start16: int16 = 300 in
    let delta16: int16 = 45 in
    let sum16 = start16 + delta16 in
    let flipped16 = -start16 in
    let base32: int32 = 100000 in
    let more32: int32 = 200000 in
    let sum32 = base32 + more32 in
    let diff32 = sum32 - base32 in
    let big64: int64 = 5000000000 in
    let step64: int64 = 2000000000 in
    let remain64 = big64 - step64 in
    let neg64 = -step64 in
    let message = int16_to_string(sum16) + ", " + int16_to_string(flipped16) + "; " + int32_to_string(diff32) + "; " + int64_to_string(remain64) + "; " + int64_to_string(neg64) in
    let _ = string_println(message) in
    ()
}

