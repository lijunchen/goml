fn classify(x: int32) -> string {
  if x < 0 {
      {
          "negative";
      }
  } else {
      {
          if 0 < x {
              {
                  "positive";
              }
          } else {
              {
                  "zero";
              }
          };
      }
  };
}

fn triangle_type(a: int32, b: int32, c: int32) -> string {
  if a < b {
      {
          if b < c {
              {
                  "ascending";
              }
          } else {
              {
                  "peak";
              }
          };
      }
  } else {
      {
          if a < c {
              {
                  "valley";
              }
          } else {
              {
                  "flat";
              }
          };
      }
  };
}

